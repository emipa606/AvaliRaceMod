<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ===== Bases ===== -->
  <ThingDef Name="AV_BaseMeleeWeapon" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Industrial</techLevel>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>AvaliWeaponWorkbench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>
  <ThingDef Name="AV_BaseMeleeWeapon_Sharp" ParentName="AV_BaseMeleeWeapon" Abstract="True">
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
          <li>WoodLog</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  <ThingDef Name="AV_BaseMeleeWeapon_Sharp_Quality" Abstract="True" ParentName="AV_BaseMeleeWeapon_Sharp">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
  </ThingDef>
  <!-- ===== Avali Dagger ===== -->
  <ThingDef ParentName="AV_BaseMeleeWeapon_Sharp_Quality">
    <defName>Avali_Dagger</defName>
    <label>Avali Dagger</label>
    <techLevel>Industrial</techLevel>
    <description>One the oldest Avali tools, the knife is both an everyday tool and a deadly weapon.</description>
    <graphicData>
      <texPath>Things/Items/Weapons/Avali_Dagger</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>20</costStuffCount>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.5</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.0</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.25</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.25</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>AvaliWorkbenches</researchPrerequisite>
    </recipeMaker>
    <weaponTags>
      <li>AvaliMelee</li>
    </weaponTags>
  </ThingDef>
