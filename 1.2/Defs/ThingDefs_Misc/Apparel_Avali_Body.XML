  <!-- ===== Storm Coat ===== -->
  <ThingDef ParentName="ApparelMakeableBaseAvali">
    <defName>Apparel_Avali_StormCoat</defName>
    <label>Avali Storm Coat</label>
    <description>A tough coat designed to keep you safe even in a storm.  Doesn't do a bad job of stopping bullets either.</description>
    <graphicData>
      <texPath>Things/Items/Apparel/Body/StormCoat/Avali_StormCoat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>AvaliClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>2.5</Mass>
      <StuffEffectMultiplierArmor>0.60</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.80</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.80</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
      <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Hands</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Items/Apparel/Body/StormCoat/Avali_StormCoat</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Avali</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
